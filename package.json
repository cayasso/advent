{
  "name": "advent",
  "version": "1.0.9",
  "description": "Event sourcing made simple.",
  "keywords": [
    "store",
    "event",
    "microservice",
    "event sourcing",
    "event store",
    "eventstore",
    "command",
    "cqrs"
  ],
  "author": "Jonathan Brumley <cayasso@gmail.com>",
  "scripts": {
    "test": "xo && ./node_modules/.bin/mocha",
    "build": "npm run clean && ./node_modules/.bin/babel src -d lib",
    "prepublish": "npm run build",
    "clean": "rm -rf lib/",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags && npm publish",
    "patch": "npm version patch -m \"[release] %s\""
  },
  "license": "MIT",
  "dependencies": {
    "advent-memory": "^0.1.3",
    "babel-polyfill": "^6.16.0",
    "lodash.isplainobject": "^4.0.4",
    "lodash.last": "^3.0.0",
    "uuid": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-preset-stage-3": "^6.5.0",
    "mocha": "~3.2.0",
    "pre-commit": "^1.1.2",
    "should": "~11.1.1",
    "xo": "^0.17.1"
  },
  "main": "./lib/index",
  "pre-commit": [
    "test"
  ],
  "xo": {
    "curly": 0,
    "semicolon": false,
    "esnext": true,
    "space": 2,
    "ignores": [
      "test/**"
    ],
    "rules": {
      "no-unused-vars": 0,
      "object-curly-spacing": 0,
      "no-unused-expressions": 0,
      "promise/param-names": 0,
      "import/no-unassigned-import": 0
    }
  }
}
