{
  "name": "advent-packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run lint && lerna run test --stream",
    "lint": "xo --env=mocha",
    "publish": "lerna publish from-git --yes"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint-config-prettier": "^4.2.0",
    "lerna": "^3.13.4",
    "mocha": "^6.1.4",
    "pre-commit": "^1.2.2",
    "should": "^13.2.3",
    "xo": "^0.24.0"
  },
  "pre-commit": [
    "test"
  ],
  "xo": {
    "extends": [
      "prettier"
    ],
    "ignores": [
      "**/test/**",
      "examples"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "capitalized-comments": 0,
      "no-use-before-define": 0,
      "no-return-assign": 0,
      "import/extensions": 0,
      "no-await-in-loop": 0,
      "complexity": 0,
      "yoda": 0
    }
  }
}
