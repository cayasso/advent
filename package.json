{
  "name": "advent",
  "version": "1.1.0",
  "description": "Event sourcing made simple.",
  "keywords": [
    "store",
    "event",
    "microservice",
    "event sourcing",
    "event store",
    "eventstore",
    "command",
    "cqrs"
  ],
  "author": "Jonathan Brumley <cayasso@gmail.com>",
  "scripts": {
    "test": "xo && ./node_modules/.bin/mocha",
    "build": "npm run clean && ./node_modules/.bin/babel src -d lib",
    "prepublish": "npm run build",
    "clean": "rm -rf lib/",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags && npm publish",
    "patch": "npm version patch -m \"[release] %s\""
  },
  "license": "MIT",
  "dependencies": {
    "advent-memory": "^0.1.3",
    "babel-polyfill": "^6.23.0",
    "lodash.isplainobject": "^4.0.4",
    "lodash.last": "^3.0.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "eslint-config-prettier": "^1.7.0",
    "mocha": "^3.4.2",
    "pre-commit": "^1.2.2",
    "should": "^11.2.1",
    "xo": "^0.18.2"
  },
  "main": "./lib/index",
  "pre-commit": [
    "test"
  ],
  "xo": {
    "extends": [
      "prettier"
    ],
    "ignores": [
      "test/**"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "capitalized-comments": 0,
      "no-return-assign": 0,
      "import/extensions": 0,
      "no-await-in-loop": 0,
      "complexity": 0,
      "yoda": 0
    }
  }
}
